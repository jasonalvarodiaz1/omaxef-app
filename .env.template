# Environment Variables Configuration Template
# Copy this to .env.development and .env.production and fill in actual values

# Development Settings
PORT=3001
CMM_API_KEY=your_covermymeds_api_key_here

# Epic Hyperspace Configuration
REACT_APP_EPIC_CLIENT_ID=e12f6559-dcee-4201-881e-90fc41978ef3
REACT_APP_EPIC_FHIR_BASE=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
REACT_APP_EPIC_AUTH_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/authorize
REACT_APP_EPIC_TOKEN_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token
REACT_APP_REDIRECT_URI=http://localhost:3001/callback
REACT_APP_EPIC_SCOPE=launch launch/patient patient/Patient.read patient/Condition.read patient/Observation.read patient/MedicationRequest.read patient/Coverage.read openid fhirUser

# FHIR Server Configuration
REACT_APP_FHIR_SERVER_URL=http://localhost:8080/fhir
REACT_APP_FHIR_CLIENT_ID=your_client_id_here
REACT_APP_EHR_AUTHORIZATION_URL=https://ehr.example.com/oauth2/authorize
REACT_APP_EHR_TOKEN_URL=https://ehr.example.com/oauth2/token

# Token Exchange Server
REACT_APP_TOKEN_EXCHANGE_URL=http://localhost:3001/token-exchange

# Feature Flags
REACT_APP_ENABLE_CACHE=true
REACT_APP_ENABLE_PHI_REDACTION=true
REACT_APP_ENABLE_CONFIDENCE_SCORING=true
REACT_APP_ENABLE_CLINICAL_OVERRIDES=true

# RxNorm Integration Settings
# REACT_APP_USE_RXNORM: Enable/disable RxNorm API integration (false for initial rollout)
# REACT_APP_RXNORM_CACHE_DURATION: Cache duration in milliseconds (3600000 = 1 hour dev, 7200000 = 2 hours prod)
# REACT_APP_FALLBACK_TO_LOCAL: Fall back to local data if RxNorm API fails (recommended: true)
REACT_APP_USE_RXNORM=false
REACT_APP_RXNORM_CACHE_DURATION=3600000
REACT_APP_FALLBACK_TO_LOCAL=true

# Logging and Monitoring
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_TELEMETRY=false

# Security
REACT_APP_REQUIRE_HTTPS=false
REACT_APP_SESSION_TIMEOUT_MINUTES=30

# API Keys (Never commit actual keys)
REACT_APP_ANALYTICS_KEY=your_analytics_key_here
