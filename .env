# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV=development
REACT_APP_VERSION=1.0.0

# ========================================
# EPIC FHIR CONFIGURATION
# ========================================
REACT_APP_EPIC_FHIR_BASE=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
REACT_APP_FHIR_CLIENT_ID=your_client_id_here
REACT_APP_FHIR_REDIRECT_URI=http://localhost:3000/callback

# Server-side only (DO NOT prefix with REACT_APP_)
EPIC_TOKEN_ENDPOINT=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token
EPIC_CLIENT_ID=your_client_id_here
EPIC_CLIENT_SECRET=your_epic_client_secret_here

# ========================================
# SECURITY CONFIGURATION
# ========================================
# Token exchange API key (generate with: openssl rand -hex 32)
TOKEN_EXCHANGE_API_KEY=59dc8279186727b5ade81a16903d9b2f5fc38e98bd615eee8ac2d37c17d4a673

# IP allowlist (comma-separated, optional)
# ALLOWED_IPS=10.0.0.1,10.0.0.2

# Session configuration
REACT_APP_SESSION_TIMEOUT_MINUTES=30
REACT_APP_REQUIRE_HTTPS=false

# ========================================
# PHI & COMPLIANCE
# ========================================
REACT_APP_ENABLE_PHI_REDACTION=true
REACT_APP_PHI_REDACTION_LEVEL=strict
REACT_APP_ENABLE_AUDIT_LOGGING=true
REACT_APP_AUDIT_RETENTION_DAYS=2555

# BAA compliance
REACT_APP_BAA_VERIFIED=false
REACT_APP_BAA_APPROVED_SERVICES=

# ========================================
# MONITORING & LOGGING
# ========================================
REACT_APP_ENABLE_TELEMETRY=false
REACT_APP_LOG_LEVEL=info

# Backend endpoints (configure in production)
REACT_APP_LOG_ENDPOINT=
REACT_APP_AUDIT_ENDPOINT=
REACT_APP_ALERT_ENDPOINT=

# ========================================
# CORS & SECURITY HEADERS
# ========================================
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000
REACT_APP_TOKEN_EXCHANGE_URL=http://localhost:3001

# ========================================
# OPTIONAL: EXTERNAL SERVICES
# ========================================
# CoverMyMeds API (if used)
CMM_API_KEY=your_covermymeds_api_key_here

# Analytics (optional)
# REACT_APP_ANALYTICS_KEY=
