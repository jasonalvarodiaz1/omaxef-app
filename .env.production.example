# ========================================
# PRODUCTION CONFIGURATION
# ========================================
NODE_ENV=production

# ========================================
# EPIC FHIR CONFIGURATION (PRODUCTION)
# ========================================
REACT_APP_EPIC_FHIR_BASE=https://fhir.epic.com/interconnect-fhir-oauth/api/FHIR/R4
REACT_APP_FHIR_CLIENT_ID=your_production_client_id
REACT_APP_FHIR_REDIRECT_URI=https://yourdomain.com/callback

# Server-side (MUST use Key Vault in production)
EPIC_TOKEN_ENDPOINT=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token
EPIC_CLIENT_ID=from_key_vault
EPIC_CLIENT_SECRET=from_key_vault

# ========================================
# SECURITY (PRODUCTION)
# ========================================
TOKEN_EXCHANGE_API_KEY=from_key_vault
ALLOWED_IPS=your_backend_ip_here

# HTTPS required
REACT_APP_REQUIRE_HTTPS=true
REACT_APP_SESSION_TIMEOUT_MINUTES=30

# ========================================
# PHI & COMPLIANCE (PRODUCTION)
# ========================================
REACT_APP_ENABLE_PHI_REDACTION=true
REACT_APP_PHI_REDACTION_LEVEL=strict
REACT_APP_ENABLE_AUDIT_LOGGING=true
REACT_APP_AUDIT_RETENTION_DAYS=2555

# BAA compliance (MUST be true in production)
REACT_APP_BAA_VERIFIED=true
REACT_APP_BAA_APPROVED_SERVICES=azure-openai,approved-service-2

# ========================================
# MONITORING (PRODUCTION)
# ========================================
REACT_APP_ENABLE_TELEMETRY=true
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_REAL_TIME_ALERTS=true

# Production endpoints
REACT_APP_LOG_ENDPOINT=https://your-log-service.com/api/logs
REACT_APP_AUDIT_ENDPOINT=https://your-audit-service.com/api/audit
REACT_APP_ALERT_ENDPOINT=https://your-alert-service.com/api/alerts

# ========================================
# CORS (PRODUCTION)
# ========================================
REACT_APP_ALLOWED_ORIGINS=https://yourdomain.com
REACT_APP_TOKEN_EXCHANGE_URL=https://token-exchange.yourdomain.com

# ========================================
# AZURE KEY VAULT (REQUIRED IN PRODUCTION)
# ========================================
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=from_secure_config